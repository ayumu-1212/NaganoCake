<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="public-genre-list-box">
        <strong class="text-muted">ジャンル一覧</strong>
        <ul>
          <% Genre.all.each do |genre| %>
          <li>
            <%= link_to genre.name, items_path(gid: genre.id), class: "public-genre-list-link text-muted" %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-9">
      <% if @genre.blank? %>
        <h2 class="page-title">商品一覧</h2>
      <% else %>
        <h2 class="page-title"><%= @genre.name %>一覧</h2>
      <% end %>
      <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        <% @items.each do |item| %>
          <div class="col mb-5">
              <div class="card h-100">
                  <!-- Product image-->
                  <%= attachment_image_tag item, :image %>
                  <!-- Product details-->
                  <div class="card-body p-4">
                      <div class="text-center">
                          <!-- Product name-->
                          <h5 class="fw-bolder"><%= item.name %></h5></h5>
                          <!-- Product price-->
                          ¥ <%= item.price.to_s(:delimited) %>
                      </div>
                  </div>
                  <!-- Product actions-->
                  <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                      <div class="text-center"><%= link_to "詳細", item_path(item), class: "btn btn-outline-dark" %></div>
                  </div>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>