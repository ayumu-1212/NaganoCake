<div class="container">
  <h2 class="customers-mypage-title">マイページ</h2>
  <div class="mypage-row">
    <span class="mypage-row-title">登録情報</span>
    <%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
  </div>
  <div class="mypage-row">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th scope="row">名前</th>
          <td>
            <%= current_end_user.last_name + current_end_user.first_name %>
          </td>
        </tr>
        <tr>
          <th scope="row">カナ</th>
          <td>
            <%= current_end_user.last_name_kana + current_end_user.first_name_kana %>
          </td>
        </tr>
        <tr>
          <th scope="row">郵便番号</th>
          <td>
            <%= current_end_user.postal_code %>
          </td>
        </tr>
        <tr>
          <th scope="row">住所</th>
          <td>
            <%= current_end_user.address %>
          </td>
        </tr>
        <tr>
          <th scope="row">電話番号</th>
          <td>
            <%= current_end_user.phone_number %>
          </td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th></th>
          <td>
            <%= current_end_user.email %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="mypage-row">
    <span class="mypage-row-title">配送先</span>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
  </div>
  <div class="mypage-row">
    <span class="mypage-row-title">注文履歴</span>
    <%= link_to "一覧を見る", cart_items_path, class: "btn btn-primary" %>
  </div>
</div>