<div class="container">
  <h2 class="sign-up-title">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/customers/shared/error_messages", resource: resource %>


    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputLastName">姓</label>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", placeholder: "姓", class: "form-control", id: "inputLastName" %>
      </div>
      <div class="form-group col-md-6">
        <label for="inputFirstName">名</label>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", placeholder: "名", class: "form-control", id: "inputFirstName" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputLastNameKana">セイ</label>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "family-name", placeholder: "セイ", class: "form-control", id: "inputLastNameKana" %>
      </div>
      <div class="form-group col-md-6">
        <label for="inputFirstNameKana">メイ</label>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name", placeholder: "メイ", class: "form-control", id: "inputFirstNameKana" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control", id: "inputEmail" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputPostalCode">郵便番号</label>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code", placeholder: "000-0000", class: "form-control", id: "inputPostalCode" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="inputAddress">住所</label>
        <%= f.text_field :address, autofocus: true, autocomplete: "street-address", placeholder: "住所", class: "form-control", id: "inputAddress" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputPhoneNumber">電話番号</label>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "tel-national", placeholder: "000-0000-0000", class: "form-control", id: "inputPhoneNumber" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputPassword">パスワード(6文字以上)</label>
        <%= f.text_field :password, autofocus: true, autocomplete: "new-password", placeholder: "パスワード", class: "form-control", id: "inputPassword" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputPasswordConfirmation">パスワード(確認用)</label>
        <%= f.text_field :password_confirmation, autofocus: true, autocomplete: "new-password", placeholder: "パスワード", class: "form-control", id: "inputPasswordConfirmation" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "public/customers/shared/links" %>
</div>