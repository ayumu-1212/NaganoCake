<div class="container">
  <h2 class="page-title">ジャンル一覧・追加</h2>
  <%= form_with model: @genre, url: admin_genres_path, local: true, :html => {class: "needs-validation", novalidate: true} do |f| %>
    <div class="form-row admin-genre-new-box">
      <div class="form-group col-md-2">
        <label for="inputGenreName">ジャンル名</label>
      </div>
      <div class="form-group col-md-4">
        <%= f.text_field :name, autofocus: true, placeholder: "ジャンル名", required: true, class: "form-control", id: "inputGenreName"%>
        <div class="invalid-feedback">
          ジャンル名を入力してください。
        </div>
      </div>
      <div class="form-group col-md-2">
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">ジャンル</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>